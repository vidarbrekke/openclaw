# ~/.linode.env - Linode Credentials Template
# Copy this to ~/.linode.env and fill in your actual values

# Linode API Token (required for API operations)
# Get one at: https://cloud.linode.com/profile/tokens
export LINODE_API_TOKEN=""

# SSH Access (required for remote command execution)
export SSH_HOST=""        # Your server IP address
export SSH_USER=""        # Your SSH username (e.g., "root" or a sudo user)
export SSH_PORT="22"      # SSH port (default 22)
export SSH_KEY_PATH=""    # Optional: Path to SSH private key

# Optional: Direct credentials (only if SSH keys aren't set up yet)
export ROOT_PASSWORD=""   # WARNING: Avoid storing this in plain text if possible
